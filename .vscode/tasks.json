{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug-build",
      "type": "shell",
      "command": "bazel",
      "args": [
        "build",
        "--compilation_mode=dbg",
        "--spawn_strategy=standalone",
        "...:all"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "bazel",
      "args": ["build", "...:all"]
    }
  ]
}
